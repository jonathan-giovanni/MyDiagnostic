<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.dev4u.hv.my_diagnostic.FragmentsIntro.Fragment_disclaimer"
    android:padding="5dp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:text="TERMS AND CONDITIONS"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="24dp"
        android:textColor="@color/light_font"
        android:shadowColor="@color/text_shadow"
        android:layout_marginTop="35dp"
        />


    <ScrollView
        android:background="#28fafafa"
        android:scrollbars="none"
        android:layout_above="@+id/lblViewAll"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView2">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView32"
            android:text="Please note that the evaluation My Diagnostic provides is solely for informational and educatives purposes based on the information available in our database and is not a qualified medical opinion."
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            />


    </ScrollView>

    <Button
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/personalized_button"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/lblViewAll"
        android:backgroundTint="@color/white"
        android:text="@string/view_all_terms"
        android:shadowColor="@color/text_shadow"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/checkTerms"
        android:layout_centerHorizontal="true" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/i_agree"
        android:id="@+id/checkTerms"
        android:textSize="20dp"
        android:textColor="@color/light_font"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:checked="false"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:buttonTint="#f7f7f7"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        />

</RelativeLayout>